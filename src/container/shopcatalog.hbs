<main>
    <div>
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#if @last}}
            <li class="breadcrumb-item">{{name}}</li>
            {{else}}
            <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
            {{/if}}
            {{/each}}
        </ol>
    </div>

    <h1 class="my-5">{{header}}</h1>

    <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option class="placeholder">{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row">

        <div class="col-4">
            <div class="card my-5">
                <div class="card-body">
                    {{#with filterBlock}}

                    {{#with sellers}}
                    <p>{{title}}</p>
                    {{#each list}}
                    <div class="form-check my-2">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}

                    <hr>

                    {{#with brands}}
                    <p>{{title}}</p>
                    {{#with input}}
                    <input placeholder="{{placeholder}}" class="form-control">
                    {{/with}}
                    {{#each options}}
                    <div class="form-check my-2">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                    <hr>
                    {{#with price}}
                    <p>{{title}}</p>

                    {{#with range}}
                    <input placeholder="{{from}}" class="form-control mb-3">
                    <input placeholder="{{to}}" class="form-control">
                    {{/with}}

                    {{#with button}}
                    <a href="{{link}}" class="btn btn-outline-secondary mt-3">{{text}}</a>
                    {{/with}}
                    {{/with}}

                    <hr>

                    {{#each filterList}}
                    <p>{{title}}</p>

                    {{#each options}}
                    <div class="form-check my-2">
                        <label class="form-check-label">{{value}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}

                    <hr>
                    {{/each}}

                    {{/with}}
                </div>
            </div>
        </div>

        <div class="col-8">
            <div class="row">
                {{#each goodsList}}

                <div class="col-6">
                    <div class="card mt-5">
                        <img src="{{img}}" class="card-img-top">
                        <div class="card-body">
                            <div class="col-6">
                                {{#if isHot}}
                                <span class="badge text-bg-warning rounded-pill text-light text-uppercase">Hot!</span>
                                {{/if}}
                                {{#if isNew}}
                                <span class="badge text-bg-primary rounded-pill text-light">Нове</span>
                                {{/if}}
                            </div>
                            <div class="col-6 mt-3">
                                {{#if isFast}}
                                <span class="badge text-bg-success text-light">Швидка доставка</span>
                                {{/if}}
                                {{#if isFree}}
                                <span class="badge text-bg-secondary text-light">Безкоштовна доставка</span>
                                {{/if}}
                            </div>

                            <h5 class="my-3">{{name}}</h5>

                            {{#with review}}
                            <p>{{teamount}} {{text}}</p>
                            {{/with}}

                            <h4>{{price}}</h4>

                            <p>{{delivery}}</p>

                            {{#each buttons}}
                            <div class="my-2">
                                <div class="col-12">
                                    {{#if isPrimary}}
                                    <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                    {{/if}}
                                </div>
                                {{#if isSecondary}}
                                <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}

                            <ul class="mt-4">
                                {{#each characteristics}}
                                <li>{{title}}: {{value}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </div>

    <div class="mb-5">
        {{#with service}}
        {{> shopaction}}
        {{/with}}
    </div>

    <hr>
</main>