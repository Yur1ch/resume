<div>
    {{#with main}}
    <main>
        <section>
            {{> title big=true data="My education"}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd includeZero=false}} (Ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title big=false data="My certificates"}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}

                    {{#if id includeZero=true}} ({{id}}) {{/if}}
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>