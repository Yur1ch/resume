<main>
    <div class="row">

        <h1 class="mb-4">{{header}}</h1>

        {{#with purchase}}
        <div class="row">
            <div class="">
                <ul class="nav nav-tabs">
                    {{#each tabs}}
                    {{#if @last}}
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">{{this}}</a>
                    </li>
                    {{else}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">{{this}}</a>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="row mb-4">
            {{#with actionBlock}}

            <div class="col-3">
                {{#with input}}
                <input class="form-control mt-3" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            {{#each buttons}}

            {{#if isSuccess}}
            <div class="col-1">
                <a class="btn btn-success mt-3" href="{{link}}">{{text}}</a>
            </div>
            {{/if}}

            {{#if isOutline}}
            <div class="col-2">
                <a class="btn btn-outline-success mt-3" href="{{link}}">{{text}}</a>
            </div>
            {{/if}}

            {{#if isDanger}}
            <div class="col-2">
                <a class="btn btn-outline-danger mt-3" href="{{link}}">{{text}}</a>
            </div>
            {{/if}}

            {{/each}}


            {{/with}}
        </div>

        <hr>
        <div>
            {{#each itemList}}
            <div class="row">
                <div class="col-4">
                    {{number}}
                    <br>
                    {{status}}
                </div>
                <div class="col-2">
                    {{#with amount}}
                    <p>{{title}}</p>
                    <h5>{{value}}</h5>
                    {{/with}}
                </div>

                <div class="col-3">
                    <div class="row">
                        {{#each images}}
                        <div class="col-4">
                            <img src="{{this}}" class="card-img-top">
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="col-3 mt-2">
                    {{#with button}}
                    {{#if isPrimary}}
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    {{/if}}
                    {{/with}}
                </div>
                <hr>
            </div>
            {{/each}}
        </div>
        {{/with}}


        {{#with userInfo}}

        <h2 class="my-5">{{title}}</h2>

        <div class="card">
            {{#with profileData}}
            <h3 class="ms-3 mt-3 mb-4">{{title}}</h3>

            <div class="card-body">

                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            {{#each fullName}}
                            <div class="col-4">
                                <p>{{title}}</p>
                                <b>{{value}}</b>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            {{#each otherInfo}}
                            <div class="col-4">
                                <p>{{title}}</p>
                                <b>{{value}}</b>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
                <br>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            {{#each buttons}}
                            <div class="col-4">
                                {{#if isPrimary}}
                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                {{/if}}
                                {{#if isSecondary}}
                                <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            {{#with recipients}}

            <h3 class="ms-3 mt-3 mb-4">{{title}}</h3>


            <div class="row">
                {{#each users}}

                <div class="col-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="ps-3"><b>{{name}}</b></p>
                            <p class="ps-3">{{phone}}</p>
                            {{#with button}}
                            <a href="{{link}}" class="btn btn-primary ms-3">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            {{/with}}
        </div>

        <div class="card mt-3 mb-5">
            {{#with contacts}}

            <h3 class="ms-3 mt-3 mb-4">{{title}}</h3>



            {{#with contactData}}
            <div class="row">
                <div class="col-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            {{#with phone}}
                            <p>{{title}}</p>
                            <p><b>{{value}}</b></p>
                            {{/with}}

                            <a href="https://www.youtube.com/" class="btn btn-primary">Редагувати</a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            {{#with additionalPhone}}
                            <p>{{title}}</p>
                            <p><b>{{value}}</b></p>
                            {{/with}}
                            <a href="https://www.youtube.com/" class="btn btn-outline-secondary">Очистити</a>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            {{#with email}}
                            <p>{{title}}</p>
                            <p><b>{{value}}</b></p>
                            {{/with}}
                            <a href="https://www.youtube.com/" class="btn btn-outline-danger">Видалити</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}

            {{/with}}
        </div>
        {{/with}}

        <hr>
    </div>
</main>