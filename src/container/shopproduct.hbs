<main>
    <div class="row">
        <div>
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item disabled"><a href="{{url}}">{{name}}</a></li>
                {{#if @last}}
                <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>

    <br>

    <div>

        {{#with productData}}
        <div class="row">


            <div class="col-6">
                <div class="pb-3">
                    <img src="{{img}}" class="card-img-top">
                </div>

                <div class="card p-2">
                    {{#with info}}
                    <h6 class="card-title">{{title}}</h6>
                    <p>{{about}}</p>
                    <h5>{{price}}</h5>

                    <div>
                        {{#each category}}
                        {{#if isHot}}
                        <span class="badge bg-warning">{{name}}</span>
                        {{/if}}

                        {{#if isNew}}
                        <span class="badge bg-primary">{{name}}</span>
                        {{/if}}

                        {{#if isBonus}}
                        <span class="badge bg-info">{{name}}</span>
                        {{/if}}

                        {{/each}}
                    </div>
                    {{/with}}
                </div>
            </div>


            <div class="col-5">
                {{#with item}}
                <div class="ps-4">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                {{#each head}}
                                <th>{{this}}</th>
                                {{/each}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each body}}
                            <tr>
                                {{#each this}}
                                <td>{{this}}</td>
                                {{/each}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{/with}}

                {{#with param}}
                <div class="ps-4">
                    <ul class="list-group">
                        <li class="list-group-item"><b>{{title}}</b></li>
                        {{#each list}}
                        <li class="list-group-item">{{this}}</li>
                        {{/each}}

                    </ul>
                </div>
                {{/with}}

                {{#with alert}}
                <div class="pt-3">
                    <div class="ps-4">
                        {{#if isError}}
                        <div class="alert alert-danger" role="alert">{{text}}</div>
                        {{/if}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
    </div>

    <div class="mt-3 mb-3">
        <div class="card">

            <div class="nav">
                {{#each actionList}}
                <div class="nav-item p-2">

                    {{#if isWarning}}
                    <button class="btn btn-warning">{{name}}</button>
                    {{/if}}
                    {{#if isError}}
                    <button class="btn btn-outline-danger">{{name}}</button>
                    {{/if}}
                    {{#if isSuccess}}
                    <button class="btn btn-success">{{name}}</button>
                    {{/if}}
                    {{#if isGood}}
                    <button class="btn btn-outline-success">{{name}}</button>
                    {{/if}}
                </div>
                {{/each}}
            </div>

        </div>
    </div>
    {{/with}}

    <br>
    <br>
    <br>
    <br>
    <hr>

    <div>
        {{#with goodsOtherBlock}}

        <div class="py-3">
            <h3 class="text-center">{{title}}</h3>
        </div>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                <div class="card">

                    <img src="{{image}}" class="card-img-top">

                    <div class="card-title ps-3 pt-2"><b>{{title}}</b>
                        {{#if isHot}}
                        <span class="badge bg-warning">HOT</span>
                        {{/if}}

                        {{#if isNew}}
                        <span class="badge bg-primary">New</span>
                        {{/if}}
                    </div>

                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>

                </div>
            </div>
            {{/each}}

        </div>
        {{/with}}
    </div>

    <br>
    <hr>
    <br>


    <div>
        {{#with service}}
        <div class="card text-bg-success">
            <div class="m-3">
                <h2 class="text-center">{{title}}</h2>
                <p class="text-center">{{description}}</p>
                <div class="col-12">
                    {{#each buttons}}
                    <div class="text-center">
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>

    <br>
    <hr>

</main>