<div class="card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-2">
                <img src="{{image}}" class="card-img-top">
            </div>
            <div class="col-4 pt-3">
                <h4>{{name}}</h4>
                <p>{{description}}</p>
            </div>
            <div class="col-2  ms-5 mt-4">
                {{#with price}}
                <p>{{title}}</p>
                <h5>{{value}}</h5>
                {{/with}}
            </div>
            <div class="col-2 mt-5">
                <p>{{amount}}</p>
            </div>
            <div class="col-1 my-3 py-3">
                {{#each buttons}}
                {{#if isPrimary}}
                <button class="btn btn-primary mb-2">{{text}}</button>
                {{/if}}
                {{#if isDanger}}
                <button class="btn btn-outline-danger">{{text}}</button>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>