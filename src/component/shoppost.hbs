<div class="card text-bg-dark">
    <div class="card-header">{{title}}
        {{#if isTop}}
        <span class="badge bg-danger">TOP</span>
        {{/if}}

        {{#if isNew}}
        <span class="badge bg-success">New</span>
        {{/if}}
    </div>
    <div class="card-body">
        <p>{{description}}</p>
    </div>
</div>